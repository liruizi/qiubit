<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

	<!-- <settings> 打印SQL语句到控制台 <setting name="logImpl" value="STDOUT_LOGGING" 
		/> </settings> -->

	<property name="LOG_HOME" value="logs" />

	<!-- log sql params -->
	<!--<logger name="com.bitup.dao" level="DEBUG"/> -->

	<appender name="FILE-AUDIT"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_HOME}/qiubit.log</file>

		<encoder
			class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>
				[%level]%d{yyyy-MM-dd HH:mm:ss.SSS} [%logger %line] %msg%n
			</Pattern>
		</encoder>

		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${LOG_HOME}/bitup.%d{yyyy-MM-dd}.%i.log
			</fileNamePattern>
			<!-- each file should be at most 10MB, keep 30 days worth of history, 
				but at most 1GB -->
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>30</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>

	</appender>

	<root level="INFO">
		<appender-ref ref="FILE-AUDIT" />
	</root>
</configuration>